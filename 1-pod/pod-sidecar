apiVersion: v1
kind: Pod
metadata:
  name: sidecar-pod
  labels:
    env: test
spec:
  containers:
    - name: primary-container
      image: busybox
      args:
        - /bin/sh
        - -c 
        - >
         i=0;
         while true;
         do 
         echo "$(date) INFO $i" >> /var/log/busybox.log;
         i=$((i+1));
         sleep 1;
         done
      volumeMounts:
      - name: logs
        mountPath: /var/log
    - name: sidecar-container
      image: busybox
      args: ["/bin/sh", "-c", "tail -n+1 -f /var/log/busybox.log"]
      volumeMounts:
      - name: logs
        mountPath: /var/log
  volumes:
    - name: logs
      emptyDir: {}
